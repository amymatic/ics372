<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<StackPane fx:id="addShipmentPane" fx:controller="app.controllers.ShipTrackerController"
           xmlns="http://javafx.com/javafx/8.0.141"
           xmlns:fx="http://javafx.com/fxml/1"
           prefWidth="650">
    <GridPane hgap="10" vgap="10">
        <padding><Insets right="25" bottom="25" left="25"/></padding>
        <children>
            <Label text="Add Shipment" GridPane.columnIndex="0"
                   GridPane.rowIndex="0" GridPane.columnSpan="2"
                   GridPane.rowSpan="1" GridPane.halignment="LEFT">
                <font>
                    <Font name="Arial" size="20"/>
                </font>
                <GridPane.margin>
                    <Insets top="20" bottom="20"/>
                </GridPane.margin>
            </Label>
            <Label text="Shipment ID (required)" GridPane.columnIndex="0"
                   GridPane.rowIndex="1" GridPane.columnSpan="1"
                   GridPane.rowSpan="1" GridPane.halignment="RIGHT">
                <font>
                    <Font name="Arial" size="16"/>
                </font>
                <GridPane.margin>
                    <Insets top="5" bottom="5"/>
                </GridPane.margin>
            </Label>
            <TextField GridPane.columnIndex="1" GridPane.rowIndex="1"
                       GridPane.columnSpan="1" GridPane.rowSpan="1"
                       GridPane.halignment="LEFT" fx:id="shipmentIDField">
            </TextField>
            <Label text="Shipping Mode" GridPane.columnIndex="0"
                   GridPane.rowIndex="2" GridPane.columnSpan="1"
                   GridPane.rowSpan="1" GridPane.halignment="RIGHT">
                <font>
                    <Font name="Arial" size="16"/>
                </font>
                <GridPane.margin>
                    <Insets top="5" bottom="5"/>
                </GridPane.margin>
            </Label>
            <ChoiceBox GridPane.columnIndex="1" GridPane.rowIndex="2"
                       GridPane.columnSpan="1" GridPane.rowSpan="1"
                       GridPane.halignment="LEFT" fx:id="shippingModeChoiceBox">
            </ChoiceBox>
            <Button text="Find Available Warehouses" GridPane.columnIndex="0" GridPane.rowIndex="3"
                    GridPane.columnSpan="1" GridPane.rowSpan="1"
                    GridPane.halignment="LEFT" fx:id="findAvailableWarehouseButton">
            </Button>
        </children>
    </GridPane>
</StackPane>